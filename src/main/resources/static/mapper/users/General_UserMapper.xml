<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laonworks502.team1st.dao.users.GeneralUserDao">

<!--회원 가입-->
<insert id="joinGeneraluser" parameterType="com.laonworks502.team1st.model.users.GeneralUserBean">
    insert into general_users(email, passwd, name, postal_code, address1, address2, tel1, tel2, tel3, register_date)
    values(#{email}, #{passwd}, #{name}, #{postal_code}, #{address1}, #{address2}, #{tel1}, #{tel2}, #{tel3}, current_timestamp);
</insert>

